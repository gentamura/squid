<nav>
  <div class="nav-wrapper">
    <%= link_to Rails.application.class.parent_name, root_path, class: "brand-logo" %>
    <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <% if logged_in? %>
        <li><%= link_to "Users", users_path %></li>
        <li><%= link_to "Settings", edit_user_path(current_user) %></li>
        <li><%= link_to "Log out", logout_path, method: "delete", class:"btn" %></li>
      <% else %>
        <% if login_path == request.env['PATH_INFO'] %>
          <li><%= link_to "Sign up", signup_path, class:"btn" %></li>
        <% elsif signup_path == request.env['PATH_INFO'] %>
          <li><%= link_to "Log in", login_path, class:"btn" %></li>
        <% end %>
      <% end %>
    </ul>
    <% if logged_in? %>
      <ul class="side-nav" id="mobile-demo">
        <li><%= link_to "My page", root_path %></li>
        <li><%= link_to "Users", users_path %></li>
        <li><%= link_to "Settings", edit_user_path(current_user) %></li>
        <li><%= link_to "Log out", logout_path, method: "delete", class:"btn" %></li>
      </ul>
    <% end %>
  </div>
</nav>
