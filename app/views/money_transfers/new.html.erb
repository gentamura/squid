<h1>MoneyTransfers#new</h1>
<p>
  <%= link_to 'Back', user_path(current_user) %>
</p>
<%= form_for(:user_money_transfer, url: user_money_transfers_path) do |f| %>
  <div>
    <%= f.label :receiver %>
    <% unless @friends.blank? %>
      <%= f.collection_select :receiver_id, @friends, :id, :name %>
    <% else %>
      No friends.
    <% end %>
  </div>

  <div>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>

  <div>
    <%= f.label :message %>
    <%= f.text_field :message %>
  </div>

  <%= f.submit "Submit" %>
<% end %>
